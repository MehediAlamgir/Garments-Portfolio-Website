@{
    ViewData["Title"] = "Company Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Company Profile</h1>
        <p class="lead text-muted">Crafting excellence in garments with precision, passion, and purpose.</p>
    </div>

    <!-- About + Mission -->
    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="p-4 shadow rounded bg-light h-100">
                <h3 class="mb-3"><i class="bi bi-buildings text-primary me-2"></i>About Us</h3>
                <p>Founded in <strong>2012</strong>, we’ve grown into a leading garments manufacturer specializing in <strong>men’s, women’s and children’s apparel — catering to both seasonal and year-round garment needs</strong>. Our dedication to quality and customer satisfaction sets us apart.</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="p-4 shadow rounded bg-light h-100">
                <h3 class="mb-3"><i class="bi bi-bullseye text-success me-2"></i>Our Mission</h3>
                <p>To deliver top-notch garments that exceed global standards with timely deliveries and competitive pricing.</p>
            </div>
        </div>
    </div>

    <!-- Product Design -->
    <div class="mb-5">
        <h3 class="mb-3 text-decoration-underline">Product Design</h3>
        <p>Our designers stay ahead of global trends, offering:</p>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item">🎨 Custom design services</li>
            <li class="list-group-item">🧵 Sample development</li>
            <li class="list-group-item">📐 Technical specifications</li>
            <li class="list-group-item">✂️ Pattern making</li>
        </ul>
    </div>

    <!-- Sourcing & Production -->
    <div class="mb-5">
        <h3 class="mb-3 text-decoration-underline">Sourcing & Production</h3>
        <p>Our supply chain is controlled with precision and care:</p>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item">🔍 Quality fabrics from trusted sources</li>
            <li class="list-group-item">🏭 Vertically integrated facilities</li>
            <li class="list-group-item">⚙️ Modern machinery</li>
            <li class="list-group-item">👷 Skilled and experienced workforce</li>
        </ul>
    </div>

    <!-- Fabrications -->
    <div class="mb-5">
        <h3 class="mb-3 text-decoration-underline">Fabrications</h3>
        <p>We work with a diverse range of textiles:</p>
        <div class="row row-cols-2 row-cols-md-4 g-3">
            <div class="col"><span class="badge bg-secondary p-2 w-100">100% Cotton</span></div>
            <div class="col"><span class="badge bg-secondary p-2 w-100">Polyester Blends</span></div>
            <div class="col"><span class="badge bg-secondary p-2 w-100">Linen</span></div>
            <div class="col"><span class="badge bg-secondary p-2 w-100">Technical Fabrics</span></div>
        </div>
    </div>

    <!-- Order Delivery -->
    <div class="mb-5">
        <h3 class="mb-3 text-decoration-underline">Order Delivery</h3>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item">📦 Sample development: 7–10 days</li>
            <li class="list-group-item">🚚 Production: 30–45 days (varies by order)</li>
            <li class="list-group-item">⚡ Express options for urgent needs</li>
        </ul>
    </div>

    <!-- Pricing -->
    <div class="mb-5">
        <h3 class="mb-3 text-decoration-underline">Pricing</h3>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item">💲 MOQ: <strong>1000</strong></li>
            <li class="list-group-item">📉 Volume discounts available</li>
            <li class="list-group-item">📝 Custom quotes for special projects</li>
        </ul>
    </div>

    <!-- Quality Assurance -->
    <div class="mb-5">
        <h3 class="mb-3 text-decoration-underline">Quality Assurance</h3>
        <p>Our rigorous QA process ensures satisfaction:</p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">🔍 In-process checks</li>
            <li class="list-group-item">✅ Final inspections</li>
            <li class="list-group-item">🌍 Compliance with global standards</li>
        </ul>
    </div>
</div>
