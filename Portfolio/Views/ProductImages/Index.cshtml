@model IEnumerable<ProductImage>
@{
    ViewData["Title"] = "Manage Product Images";
}

<h1>Manage Product Images</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Upload New Image</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Caption</th>
            <th>Upload Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImagePath" style="max-height: 100px; max-width: 100px;" />
                </td>
                <td>@item.Caption</td>
                <td>@item.UploadDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this image?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>